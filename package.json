  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^5.1.0",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
